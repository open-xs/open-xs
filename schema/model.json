{
  "title": "Open-XS model file",
  "$schema": "http://json-schema.org/draft-04/schema#",

  "type": "object",

  "properties": {
    "name": {
      "type": "string",
      "pattern": "[A-Za-z0-9]+"
    },
    "fields": {      
      "type": "object",
      "additionalProperties": { 
        "anyOf": [
            {
              "type": "string",
              "minimum": 2
            }, 
            {
              "type": "object"
            }
        ]
      }
    },
    "indexes": {
      "type": "array"
    }
  },
  "required": ["name", "fields"]
}